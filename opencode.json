{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["AGENTS.md"],
  "mcp": {
    "obsidian": {
      "type": "stdio",
      "command": "uvx",
      "args": ["mcp-obsidian"],
      "env": {
        "OBSIDIAN_API_KEY": "<YOUR_API_KEY>",
        "OBSIDIAN_HOST": "127.0.0.1",
        "OBSIDIAN_PORT": "27124"
      }
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "maestro": {
      "type": "stdio",
      "command": "<HOME_DIR>/.maestro/bin/maestro",
      "args": ["mcp"]
    },
    "figma": {
      "type": "remote",
      "url": "https://mcp.figma.com/mcp"
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer <YOUR_GITHUB_TOKEN>"
      }
    },
    "talk-to-figma": {
      "type": "stdio",
      "command": "bun",
      "args": ["run", "<PATH_TO_TALK_TO_FIGMA_SERVER>/server.js"]
    }
  }
}
